@using Indigo.ViewModels
@model LoginVM
<div class="container"
<div class="col-lg-6">
    <form method="post">
        <div class="login-form" >
            <h4 class="login-title">Login</h4>
            <div class="row">
                <div class="col-lg-12">
                    <label asp-for="UsernameOrEmail">Username or Email Address</label>
                    <input asp-for="UsernameOrEmail" placeholder="Username or Email Address" />
                    <span asp-validation-for="UsernameOrEmail" style="color:red"></span>
                </div>
                <div class="col-lg-12">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" placeholder="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="col-md-8">
                    <div class="check-box">
                        <input type="checkbox" asp-for="RememberMe"/>
                        <label asp-for="RememberMe">Remember me</label>
                    </div>
                </div>
                <div class="col-md-4 pt-1 mt-md-0">
                    <div class="forgotton-password_info">
                        <a href="#"> Forgotten password?</a>
                    </div>
                </div>
                <div class="col-lg-12 pt-5" asp-validation-summary="All">
                    <button class="btn btn-custom-size lg-size btn-pronia-primary" asp-action="Login" asp-controller="Account">
                        Login
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
</div>